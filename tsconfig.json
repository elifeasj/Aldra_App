{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleDetection": "force",
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "baseUrl": ".",
    "types": ["react", "react-native", "jest",],
    "paths": {
      "@/*": ["app/*"],
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/constants/*": ["constants/*"],
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/types/**/*.d.ts",
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/**/*",
    "firebase-auth-react-native.d.ts", "src", "app", "firebase.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "./node_modules/@tsconfig/react-native/tsconfig.json"
}
